#########################configuration 4 ########################
#main light
AttributeBegin
AreaLightSource "area" "color L" [10 10 10]
#use camera coordinate system (optional)
CoordSysTransform "camera"
# adjust light source position
Translate -0.5 3.7 2.5
Rotate 25 1 0 0
# define the shape of the arealight to be a disk with radius 1.5
Shape "disk" "float radius" [1.7] 
AttributeEnd 

# background light
AttributeBegin
AreaLightSource "area" "color L" [10 10 10]
#use camera coordinate system (optional)
CoordSysTransform "camera"
# adjust light source position
Translate -0.5 2.8 4.5
Rotate -25 1 0 0
# define the shape of the arealight to be a disk with radius 1.5
Shape "disk" "float radius" [0.8] 
AttributeEnd 

